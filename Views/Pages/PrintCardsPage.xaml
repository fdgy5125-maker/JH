<UserControl x:Class="MikrNSN.Views.Pages.PrintCardsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#201638" Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="340"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#2A2240" CornerRadius="10" Padding="12" Grid.Row="0" Grid.ColumnSpan="2">
            <UniformGrid Rows="2" Columns="4">
                <CheckBox Content="ربط الكروت بأول جهاز يستخدمه" Foreground="White"/>
                <CheckBox Content="حفظ داخل PDF" Foreground="White"/>
                <Button Style="{StaticResource PrimaryButton}" Content="اختيار مكان حفظ PDF"/>
                <CheckBox Content="حفظ في قاعدة البيانات بعد الطباعة" Foreground="White"/>
                <CheckBox Content="منع عرض/حفظ قبل التأكد من الإضافة" Foreground="White"/>
                <CheckBox Content="حماية الكروت من التعديل" Foreground="White"/>
                <ToggleButton Content="فتح الملف بعد الحفظ"/>
                <ToggleButton Content="طباعة بدون حفظ"/>
                <ToggleButton Content="توليد كروت بدون إضافتها"/>
            </UniformGrid>
        </Border>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="12">
            <Button Style="{StaticResource PrimaryButton}" Content="اختيار مكان حفظ PDF"/>
            <Button Style="{StaticResource PrimaryButton}" Content="معاينة الملف"/>
            <Button Style="{StaticResource PrimaryButton}" Content="تحديث الواجهة"/>
        </StackPanel>

        <Grid Grid.Row="1" Grid.Column="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Style="{StaticResource AccentButton}" Width="300" Height="64" Content="طباعة"/>
                <TextBlock Text="عدد الأوراق التي ستطبع: 0" Foreground="White" HorizontalAlignment="Center" Margin="0,12,0,0"/>
            </StackPanel>
        </Grid>

        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="انتهى من عملية المزامنة" HorizontalAlignment="Right" Foreground="#2DA8FF" Margin="0,8"/>
    </Grid>
</UserControl>
