<Window x:Class="MikrNSN.Views.HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MikrNSN" Height="420" Width="720">

    <Grid Background="#201638" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#2A2240" CornerRadius="10" Padding="10" Grid.Row="0">
            <TextBlock x:Name="StatusText" Foreground="White"/>
        </Border>

        <Border Background="#2A2240" CornerRadius="10" Padding="16" Grid.Row="1" Margin="0,12,0,12">
            <UniformGrid Rows="3" Columns="2" Margin="4">
                <StackPanel>
                    <TextBlock Text="المضيف (IP/Hostname)" Foreground="White"/>
                    <TextBox x:Name="HostText"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="المنفذ" Foreground="White"/>
                    <TextBox x:Name="PortText" Text="8728"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="اسم المستخدم" Foreground="White"/>
                    <TextBox x:Name="UserText"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="كلمة المرور" Foreground="White"/>
                    <PasswordBox x:Name="PassBox"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox x:Name="TlsCheck" Content="استخدم TLS (api-ssl)" Foreground="White"/>
                </StackPanel>
            </UniformGrid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource PrimaryButton}" Content="اتصال" Click="LoginBtn_Click" x:Name="LoginBtn"/>
        </StackPanel>
    </Grid>
</Window>
