<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Color x:Key="PrimaryPurple">#6A00FF</Color>
  <Color x:Key="PrimaryPink">#FF2D9A</Color>
  <Color x:Key="PrimaryBlue">#2DA8FF</Color>
  <SolidColorBrush x:Key="BgDark" Color="#1E1E28"/>
  <SolidColorBrush x:Key="FgText" Color="#FFFFFF"/>
  <LinearGradientBrush x:Key="AppGradient" StartPoint="0,0" EndPoint="1,1">
    <GradientStop Color="#6A00FF" Offset="0"/>
    <GradientStop Color="#8A2BE2" Offset="0.5"/>
    <GradientStop Color="#C218FF" Offset="1"/>
  </LinearGradientBrush>
  <Style x:Key="PrimaryButton" TargetType="Button">
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="Background" Value="#6A00FF"/>
    <Setter Property="BorderBrush" Value="#8A2BE2"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="14,8"/>
    <Setter Property="Margin" Value="6"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
  </Style>
  <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
    <Setter Property="Background" Value="#FF2D9A"/>
    <Setter Property="BorderBrush" Value="#FF6CC5"/>
  </Style>
  <Style TargetType="TextBox">
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="Background" Value="#2A2240"/>
    <Setter Property="BorderBrush" Value="#7A52A0"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Height" Value="32"/>
    <Setter Property="Margin" Value="6"/>
  </Style>
  <Style TargetType="ComboBox">
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="Background" Value="#2A2240"/>
    <Setter Property="BorderBrush" Value="#7A52A0"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Height" Value="32"/>
    <Setter Property="Margin" Value="6"/>
  </Style>
  <Style TargetType="DataGrid">
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="Background" Value="#261B3E"/>
    <Setter Property="BorderBrush" Value="#8A2BE2"/>
    <Setter Property="RowBackground" Value="#3A175C"/>
    <Setter Property="AlternatingRowBackground" Value="#402060"/>
    <Setter Property="Margin" Value="8"/>
    <Setter Property="SelectionMode" Value="Single"/>
    <Setter Property="SelectionUnit" Value="FullRow"/>
  </Style>
  <Style TargetType="ToggleButton">
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="Background" Value="#2A2240"/>
    <Setter Property="BorderBrush" Value="#7A52A0"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Height" Value="28"/>
    <Setter Property="Margin" Value="6"/>
    <Setter Property="Padding" Value="10,4"/>
  </Style>
</ResourceDictionary>
